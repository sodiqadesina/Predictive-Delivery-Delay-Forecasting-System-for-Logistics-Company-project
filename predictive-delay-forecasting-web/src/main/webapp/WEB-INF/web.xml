<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
         version="3.1">

    <!-- Welcome Page -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Authentication Filter -->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>ec.project.web.filters.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/user/*</url-pattern>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/shipment/*</url-pattern>
    </filter-mapping>

    <!-- Servlets -->
    <!-- Admin Login Servlet -->
    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>ec.project.web.servlets.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/AdminLoginServlet</url-pattern>
    </servlet-mapping>

    <!-- User Login Servlet -->
    <servlet>
        <servlet-name>UserLoginServlet</servlet-name>
        <servlet-class>ec.project.web.servlets.UserLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/UserLoginServlet</url-pattern>
    </servlet-mapping>

    <!-- User Signup Servlet -->
    <servlet>
        <servlet-name>UserSignupServlet</servlet-name>
        <servlet-class>ec.project.web.servlets.UserSignupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserSignupServlet</servlet-name>
        <url-pattern>/UserSignupServlet</url-pattern>
    </servlet-mapping>

    <!-- Prediction Servlet -->
    <servlet>
        <servlet-name>PredictionServlet</servlet-name>
        <servlet-class>ec.project.web.servlets.PredictionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PredictionServlet</servlet-name>
        <url-pattern>/PredictionServlet</url-pattern>
    </servlet-mapping>

    <!-- Model Selection Servlet -->
    <servlet>
        <servlet-name>ModelSelectionServlet</servlet-name>
        <servlet-class>ec.project.web.servlets.ModelSelectionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModelSelectionServlet</servlet-name>
        <url-pattern>/ModelSelectionServlet</url-pattern>
    </servlet-mapping>

    <!-- Session Timeout Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- CDI Configuration -->
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>

</web-app>
